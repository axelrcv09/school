@model Person

<br />
<div class="row">
    <div class="col">
        <h1>Ficha del Estudiante</h1>
        <hr />
        <br />
    </div>
</div>
<form asp-controller="Estudiantes" asp-action="ficha" asp-route-id="@Model.PersonID" method="post">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4><b>@Model.FirstName @Model.LastName</b></h4>
                </div>
                <div class="card-body">
                    <div class="form-group row mb-2">
                        <label asp-for="PersonID" class="col-sm-2 col-form-label"></label>                            
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="PersonID" />
                            <span asp-validation-for="PersonID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label asp-for="EnrollmentDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="EnrollmentDate" />
                            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6">
            <a asp-controller="Estudiantes" asp-action="index" class="btn btn-success">volver</a>
        </div>
        <div class="col-6 text-right">
            <input type="submit" class="btn btn-primary" value="Grabar" />
        </div>
    </div>
</form>
